{
  "name": "final-year-project",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "description": "A tool for creating repeatable workflows of requests to APIs.",
  "author": {
    "name": "Jacob Wilson"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jac0bwilson/final-year-project"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.24.0",
    "bulma": "^0.9.3",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "validator": "^13.7.0",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "PUBLIC_URL=/ react-scripts build",
    "build-electron": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build-electron && electron-builder build --publish never",
    "electron-build-release": "npm run build-electron && electron-builder build --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "electron": "^16.0.4",
    "electron-builder": "^22.10.5",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "uk.jacobw.fyp",
    "productName": "Final Year Project",
    "files": [
      "build/**/*",
      "electron/main.js",
      "package.json"
    ],
    "extends": null,
    "linux": {
      "category": "Utility",
      "target": "AppImage"
    },
    "mac": {
      "category": "public.app-category-developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "portable"
    }
  }
}
